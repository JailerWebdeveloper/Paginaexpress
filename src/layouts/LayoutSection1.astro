---
interface Props{
    Title: string,
    Description: string,
    video:boolean,
    videoSrc:string,

}

const {Title,Description,video,videoSrc} = Astro.props

import { Image } from "astro:assets";

const gif = "https://media.giphy.com/media/3o7aDcz2zX9VqJkzvG/giphy.gif"

---


<section class="mt-10 flex flex-col  gap-5 items-center justify-center  ">
    <p class="md:text-6xl text-3xl   tracking-wide w-4/5	 mx-auto text-center">{Title}</p>
    <p class="md:text-lg tracking-wide antialiased mx-auto w-4/5 md:w-3/5 text-justify">{Description}</p>
    <img
    src={gif}
    class:list={["mx-auto rounded-lg shadow-xl hover:shadow-2xl transition-all hover:ring-2 md:h-96 h-60 w-4/5 md:w-3/5",
    video ? "block" : "hidden"
    ]}
    alt="Gif de fondo"
  />
</section>

<script is:inline>
    var player = writeEmbed('player');
player.setSize(640, 360);
player.loadVideoById('video1');
</script>